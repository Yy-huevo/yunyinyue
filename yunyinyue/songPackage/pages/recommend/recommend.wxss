/* pages/recomend/recommend.wxss */
.recommendContainer .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}

.recommendContainer .header image {
    width: 100%;
    height: 100%;
}

.recommendContainer .header .data {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    /* 走自身宽度和高度的一般 */
    transform: translate(-50%, -50%);
}

.header .data .day {
    font-size: 38rpx;
}

/* 列表区域 */
.listContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
}

.listHeader {
    height: 80rpx;
    line-height: 80rpx;
}

.listContainer .changeMore {
    float: right;
} 

.listScorll {
    height: calc(100vh - 380rpx);
}

.scorllItem {
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}

.scorllItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.musicInfo {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.musicInfo text {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.scorllItem .iconfont {
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}
